<%= render 'part', book: @book_new, user: @book.user %>
<div class="col-xs-9">
<h2>Book detail</h2>

<table>
<table class="table table-hovertable-inverse" >
<thead>
<tr>
<th></th>
<th>Title</th>
<th>Opimion</th>
<th colspan="3"></th>
</tr>
</thead>
<tr>
<td><%= link_to user_path(@user.id) do %>
<%= attachment_image_tag @book.user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size:"50x50" %>
<br>
<%= @book.user.name %>
<% end %>
</td>
<br>
<td><%= link_to book_path(@book.id)do %>
<%= @book.title %>
<% end %></td>
<td><%= @book.body %></td>
<% if @book.user.id == current_user.id %>
<td><%= link_to "edit", edit_book_path(@book.id), class: "btn-sm btn-success" %></td>
	<td><%= link_to "Destory", book_path(@book.id), method: :delete, "data-confirm" => "Are you sure?", class: "btn-sm btn-danger" %></td>

  <% end %>
</table>