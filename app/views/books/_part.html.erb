<div class="col-xs-3">
	<% if flash[:notice] %>
	<%= flash[:notice] %>
	<% end %>

	<h2>User info</h2>

	<%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
	<table class="table">
		<tbody>
			<tr></tr>
			<tr>
				<th>name</th>
				<td><%= user.name %></td>
			</tr>
			<tr>
				<th>introduction</th>
				<td><%= user.introduction %></td>
				<th></th>
			</tr>
		</tbody>
	</table>
	<%= link_to "", edit_user_path(user.id), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
	<br>
	<br>
    <br>
	<h3>New Book</h3>
	<%= form_for(book) do |f| %>
    <div class="row">
<div class="col-md-12">
<h5>Title</h5>
<%= f.text_field :title, class: 'form-control' %>
</div>
</div>
<div class="row">
<div class="col-md-12">
<h5>Opinion</h5>
<%= f.text_field :body, class: 'form-control' %>
</div>
</div>
	<br>
	<br>

	<%= f.submit 'create book',class: "btn btn-primary col-xs-12" %>

	<% end %>
</div>