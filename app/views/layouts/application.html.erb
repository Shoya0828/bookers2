<!DOCTYPE html>
<html>
<head>
  <title>Bookers2</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
  <header class= "navbar navbar-inverse" >
    <div class= "container" >
      <nav class= "nav navbar-nav navbar-left" >
        <span> Bookers </span>
      </nav>
      <nav>
        <ul class= "nav navbar-nav navbar-right" >
         <%if user_signed_in? %>
         <li><div class= "Home"><%= link_to "Home",user_path(current_user.id), class: "glyphicon glyphicon-home home" %></div></li>
         <li><div class= "users"><%= link_to "Users",users_path, class: "glyphicon glyphicon-user users" %></div></li>
         <li><div class= "books"><%= link_to "Books", books_path, class: "glyphicon glyphicon-book books" %></div></li>
         <li><div class= "logout"><%= link_to "logout",destroy_user_session_path, class: "glyphicon glyphicon-log-out logout", method: :delete %></div></li>



         <% else %>
         <li><div class= "Home"><%= link_to "Home",root_path, class: "glyphicon glyphicon-home home" %></div></li>
         <li><div class= "about"><%= link_to "About", home_about_path , class: "glyphicon glyphicon-link about" %></div></li>
         <li><div class= "sign up"><%= link_to "sign up",new_user_registration_path, class: "glyphicon glyphicon-edit sign_up" %></div></li>
         <li><div class= "log in"><%= link_to"login", new_user_session_path, class: "glyphicon glyphicon-log-in sign_in" %></div></li>
         
         <% end %>
       </ul>
     </nav>
   </div>
 </header>
 <div class="container">
  <div class="row">
    <%= yield %>
  </div>
</div>
<footer>
  <div class= "col-xs-3 col-xs-offset-9">
    <p>CopyRight Infratop.inc</p>
  </div>
</footer>
</body>
</html>
