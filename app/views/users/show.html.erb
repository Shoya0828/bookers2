<%= render 'books/part', book: @book, user: @user %>
<div class="col-xs-9">
	<h1>Books</h1>
	<table class="table table-hovertable-inverse" >
<thead>
<tr>
<th></th>
<th>Title</th>
<th>Opinion</th>
<th colspan="3"></th>
</tr>
</thead>
			<% @user.books.each do |book| %>

			<tr>
				<td><%= link_to user_path(@user.id) do %>
					<%= attachment_image_tag @user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no_image.jpg", size: "50x50" %>
					<% end %>
				</td>
				<td><%= link_to book.title, book_path(book.id)  %></td>
				<td><%= book.body %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
</div>